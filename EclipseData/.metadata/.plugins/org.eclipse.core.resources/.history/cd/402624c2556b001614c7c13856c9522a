#ifndef __KARAOK_MAN_UI_H__
#define __KARAOK_MAN_UI_H__

#include "beetles_app.h"

typedef struct
{
	__s32 x;
	__s32 y;
	__s32 w;
	__s32 h;
	HTHEME res_hd;
} karaok_man_rect_t;
typedef struct
{
	__s32				 pipe;
	karaok_man_rect_t	 man_scene_lyr;
	karaok_man_rect_t	 uipara_show_lyr;
	karaok_man_rect_t	 uipara_man_volume;
	karaok_man_rect_t	 uipara_man_bright;
} karaok_man_uipara_t;

karaok_man_uipara_t *karaok_man_get_uipara(__s32 rotate);

