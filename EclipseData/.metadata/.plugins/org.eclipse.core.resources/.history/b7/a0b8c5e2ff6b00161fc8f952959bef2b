{
	return &(music_uiparam_horiz.list_ctrl);
}

//��ö���HeadbarUI����
music_headbar_ui_t *music_get_headbar_ui_param(void)
{
	return 	&(music_uiparam_horiz.headbar);
}

//��ö���playerUI����
music_palyer_ui_t *music_get_player_ui_param(void)
